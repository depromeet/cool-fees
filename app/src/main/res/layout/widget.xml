<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue">

    <ImageView
        android:id="@+id/iv_wall_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-250dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_wall_type" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:text="여기가 바로\n북극인가요?"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_live_fee"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/image_speech_buble_white_small"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/bg_blue"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_fee"
        android:layout_alignLeft="@id/tv_live_fee"
        android:layout_alignEnd="@id/tv_live_fee"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_bold"
            android:text="30,970"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:text="@string/won"
            android:textColor="@color/orange"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dividor"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/ll_fee"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/tv_live_fee"
        android:alpha="0.1"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll_fee"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/dividor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_using_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:text="@string/using_time"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:text="시간"
                android:textColor="@color/orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_total_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:text="@string/minute"
                android:textColor="@color/orange"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>